.meta {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  /*padding: 30rpx 40rpx;*/
}
.imgClass {
  width: 100vw;
  height: 300rpx;
}

.brand_name {
  font-size: 38rpx;
  color: black;
}

.brand_price {
  font-size: 28rpx;
  color: #848484;
  margin-top: 20rpx;
}

.summary {
  display: flex;
  flex-direction: column;
  width: 100vw;

  font-size: 28rpx;
}

.label {
  /*height: 120rpx;*/
  margin: 10rpx 20rpx;
  color: #848484;
  font-size: 27rpx;
}

.hot {
  margin: 10rpx 20rpx;
  color: #848484;
  font-size: 27rpx;
}

.line {
  width: 90%;
  height: 1rpx;
  margin: 20rpx 5%;
  padding: 0px;
  background-color:#DBDBDB;
  overflow: hidden;
}

.box {
  width: 100%;
  height: 140rpx;
  list-style: none;
  display: flex;
  flex-direction: row;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  justify-content: center;
}

.button1, .button2, .button3, .button4 {
  width: 300rpx;
  height: 60rpx;
  font-size: 30rpx;
}

.brand_pic {
  width: 100%;
  height: 850rpx;
  align-items: center;
